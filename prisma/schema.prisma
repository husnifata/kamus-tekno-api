generator client {
  provider = "prisma-client-js"
  binaryTargets = ["native", "debian-openssl-1.1.x"]
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL") // Mengambil URL dari file .env
  directUrl = env("DATABASE_URL") // Diperlukan untuk beberapa environment
}

// Model untuk kategori istilah
model Category {
  id    String @id @default(cuid())
  name  String @unique
  terms Term[] // Relasi: Satu kategori bisa punya banyak istilah
}

// Model untuk istilah teknologi
model Term {
  id          String    @id @default(cuid())
  term        String    @unique
  definition  String
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  categoryId  String
  category    Category  @relation(fields: [categoryId], references: [id])
}
